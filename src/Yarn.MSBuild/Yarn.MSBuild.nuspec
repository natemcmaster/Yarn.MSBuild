<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
  <metadata>
    <id>Yarn.MSBuild</id>
    <version>$version$</version>
    <authors>Nate McMaster</authors>
    <owners>Nate McMaster</owners>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <licenseUrl>https://www.apache.org/licenses/LICENSE-2.0</licenseUrl>
    <projectUrl>https://github.com/natemcmaster/Yarn.MSBuild</projectUrl>
    <iconUrl>https://cdn.rawgit.com/yarnpkg/assets/master/yarn-kitten-circle.png</iconUrl>
    <description>MSBuild integration for the Yarn package manager. Yarn is an alternative package manager to NPM.

This package bundles Yarn so MSBuild projects can invoke yarn without needing to install it separately.</description>
    <releaseNotes>$releasenotes$</releaseNotes>
    <copyright>Copyright © Nate McMaster</copyright>
    <tags>yarn node npm msbuild javascript yarn.msbuild</tags>
    <repository type="git" url="https://github.com/natemcmaster/Yarn.MSBuild" />
  </metadata>
  <files>
    <!-- This placeholder file tells nuget that this package is compatible with basically anything. -->
    <file src="_._" target="lib/netstandard1.0/" />
    <file src="_._" target="lib/net45/" />

    <file src="$output$netstandard1.5/Yarn.MSBuild.dll" target="tools/netstandard1.5/" />
    <file src="$output$net46/Yarn.MSBuild.dll" target="tools/net46/" />

    <file src="build\" target="build/" />
    <file src="buildMultiTargeting\" target="buildMultiTargeting/" />
    <!-- List at least these files to ensure that dist was extracted to the right place. pack will fail if they are missing-->
    <file src="dist\" target="dist/" />
    <file src="third_party_notice.txt" target="/" />
  </files>
</package>
